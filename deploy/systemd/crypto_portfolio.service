[Unit]
Description=Gunicorn instance to serve crypto-portfolio
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/crypto-portfolio
Environment="PATH=/home/ubuntu/crypto-portfolio/venv/bin"
ExecStart=/home/ubuntu/crypto-portfolio/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker -b 0.0.0.0:8000 app.main:app

[Install]
WantedBy=multi-user.target
